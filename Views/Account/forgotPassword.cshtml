@model HotelBookingSystem.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password - Hotel Booking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f0f0f0;
        }

        .forgot-password-container {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin: 5% auto;
            width: 100%;
            max-width: 600px;
        }

        .forgot-password-title {
            font-family: 'Bauhaus 93', sans-serif;
            color: #333;
            margin-bottom: 1rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-control {
            border-radius: 5px;
            padding: 1rem;
        }

        .btn-primary {
            background: #007bff;
            border: none;
            border-radius: 5px;
            padding: 0.75rem 1.5rem;
        }

            .btn-primary:hover {
                background: #0056b3;
            }

        .btn-danger {
            background: #dc3545;
            border: none;
            border-radius: 5px;
            padding: 0.75rem 1.5rem;
        }

            .btn-danger:hover {
                background: #c82333;
            }

        .text-center {
            text-align: center;
        }

        .text-danger {
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container forgot-password-container">
        <div class="text-center">
            <h1 class="forgot-password-title">No worries</h1>
            <h4>Your password will be restored</h4>
        </div>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="forgotPassword">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter the email you signed up with" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Confirm" class="btn btn-primary mx-2" />
                        <a asp-action="login" class="btn btn-danger mx-2">Back to Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
