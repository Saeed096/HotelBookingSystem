@model HotelBookingSystem.ViewModels.resetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    string userName = ViewBag.UserName;
    string token = ViewBag.Token;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password - Hotel Booking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f0f0f0;
        }

        .reset-password-container {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin: 5% auto;
            width: 100%;
            max-width: 600px;
        }

        .reset-password-title {
            font-family: 'Bauhaus 93', sans-serif;
            color: #333;
            margin-bottom: 1rem;
            text-align: center;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-control {
            border-radius: 5px;
            padding: 1rem;
        }

        .btn-danger {
            background: #dc3545;
            border: none;
            border-radius: 5px;
            padding: 0.75rem 1.5rem;
            width: 100%;
        }

            .btn-danger:hover {
                background: #c82333;
            }

        .text-center {
            text-align: center;
        }

        .text-danger {
            color: #dc3545;
        }

        .d-none {
            display: none !important;
        }
    </style>
</head>
<body>
    <div class="container reset-password-container">
        <h1 class="reset-password-title">Reset Password</h1>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group m-2">
                        <label asp-for="newPassword" class="control-label"></label>
                        <input asp-for="newPassword" class="form-control" />
                        <span asp-validation-for="newPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group m-2">
                        <label asp-for="confirmNewPassword" class="control-label"></label>
                        <input asp-for="confirmNewPassword" class="form-control" />
                        <span asp-validation-for="confirmNewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group m-2 d-none">
                        <label asp-for="userName" class="control-label"></label>
                        <input asp-for="userName" class="form-control" value="@userName" />
                        <span asp-validation-for="userName" class="text-danger"></span>
                    </div>
                    <div class="form-group m-2 d-none">
                        <label asp-for="token" class="control-label"></label>
                        <input asp-for="token" class="form-control" value="@token" />
                        <span asp-validation-for="token" class="text-danger"></span>
                    </div>
                    <div class="form-group m-3">
                        <input type="submit" value="Save" class="btn btn-danger" />
                    </div>
                </form> 
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
